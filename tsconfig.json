{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-native",
    "incremental": true
  },
  "include": ["src", "index.tsx", "*.config.{js,ts}", ".storybook/**/*"],
  "exclude": ["node_modules", ".husky", "dist"]
}
